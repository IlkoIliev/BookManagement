@model List<Book>

<div class="page-head">
    <h3>Списък с книги</h3>
    <a class="btn" asp-action="Create">+ Добави книга</a>
</div>

@if(Model == null || Model.Count == 0)
{
    <p>Няма книги в базата</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Заглавие</th>
                <th>Автор</th>
                <th>Жанр</th>
                <th>Година</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var b in Model)
            {
                <tr>
                    <td>@b.Id</td>
                    <td>@b.Title</td>
                    <td>@b.Author</td>    
                    <td>@b.Genre</td>
                    <td>@b.Year</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@b.Id">Прегледай</a> |
                        <a asp-action="Edit" asp-route-id="@b.Id">Редактирай</a> |
                        <a asp-action="Delete" asp-route-id="@b.Id">Изтрий</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}